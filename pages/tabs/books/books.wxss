/* pages/movies/movies.wxss */
@import '/pages/common/book/bookRow';
@import '/pages/common/dropmenu/dropmenu';

.page-book {
  padding-top: 3em;
  height: 100%;
}

.page-book .topbar {
  position: fixed;
  width: 100%;
  height: 3em;
  top: 0;
  z-index: 12;
  background-color: #fff;
  border-bottom: 0.5px solid #ccc;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.page-book .topbar .layout > image {
  width: 1.5em;
  height: .8em;
}
.layout,
.sort {
  display: flex;
  align-items: center;
}
.sort>image {
  width: .8em;
  height: .8em;
  margin-left: .3em;
}

.page-book .topbar .scanCode{
  width:84px;
  height:28px;
  background: #496069;
  text-align: center;
  border-radius:8px;

}

.page-book .topbar .scanCode_text{
  width:70px;
  height:25px;
  line-height: 25px;
  margin-right:8px;
  font-size:14px;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255, 255, 255, 1);
}

.page-book .topbar .plus-icon{
  display: inline-block;
  background: rgba(255, 255, 255, 1);
  height: 12px;
  position: relative;
  width: 2px;
}

.page-book .topbar .plus-icon:after{
  background: rgba(255, 255, 255, 1);
  content: "";
  height: 12px;
  left: 0;
  position: absolute;
  top: 0;
  width: 2px;
  transform: rotateZ(90deg)
} 

.content {
  position: relative;
  overflow: hidden;
  height: 100%;
}
.page-book .book-container {
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.page-book .book-container>view {
  width: 33.33%;
  display: -ms-inline-grid;
  border: 10rpx solid transparent;
  box-sizing: border-box;
}
